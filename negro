-- Configurar pestaña de Extras
local ExtrasTab = Window:NewTab("Extras")
local ExtrasSection = ExtrasTab:NewSection("Utilidades")

ExtrasSection:NewButton("Infinite Yield", "Carga el script de Infinite Yield.", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
end)

-- Configurar pestaña de Configuración
local ConfigTab = Window:NewTab("Configuración")
local ConfigSection = ConfigTab:NewSection("Interfaz")

ConfigSection:NewKeybind("Mostrar/Ocultar GUI", "Configura una tecla para mostrar/ocultar.", Enum.KeyCode.F, function()
    Library:ToggleUI()
end)

-- Créditos
local CreditsTab = Window:NewTab("Créditos")
local CreditsSection = CreditsTab:NewSection("Hecho por [Tu Nombre]")
